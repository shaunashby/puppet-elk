#
input {
        tcp {
                host       => "<%= @logstash_ssl_listener_hostname %>"
                port       => 6514
                ssl_enable => true
                ssl_cacert => "/etc/pki/logstash/ca.pem"
                ssl_cert   => "/etc/pki/logstash/<%= @logstash_ssl_listener_hostname %>.cert.pem"
                ssl_key    => "/etc/pki/logstash/<%= @logstash_ssl_listener_hostname %>.key.pem"
                ssl_verify => true
                type       => syslog
        }
}
